{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with mGBA",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pokeemerald_modern.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MGBA_EXECUTABLE",
                    "value": "/usr/bin/mgba-qt"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:2345",
            "debugServerPath": "${workspaceFolder}/.vscode/mgba-gdb.sh",
            "debugServerArgs": "${workspaceFolder}/pokeemerald_modern.elf",
            "serverStarted": "started-mgba-server",
            "serverLaunchTimeout": 20000,
            "preLaunchTask": "build_modern",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true,
                "moduleLoad": false,
                "programOutput": true,
                "trace": false
            }
        }
    ]
}